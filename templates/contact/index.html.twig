{% extends 'base.html.twig' %}
{% block title %}{% trans %}Contact{% endtrans %}
{% endblock %}
{% block body %}
    <!-- Page Header -->
    <header class="masthead" style="background-image: url({{asset('img/contact-bg.jpg')}})">
        <div class="overlay"></div>
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-md-10 mx-auto">
                    <div class="page-heading">
                        <h1>{% trans %}Contact Me{% endtrans %}</h1>
                        <span class="subheading">{% trans %}Have questions? I have answers.{% endtrans %}</span>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
                <p>{% trans %}Want to get in touch? Fill out the form below to send me a message and I will get back to you as soon as possible!{% endtrans %}</p>
                <form id="contactForm" name="sentMessage" novalidate>
                    <div class="control-group">
                        <div class="form-group floating-label-form-group controls">
                            <label>{% trans %}Name{% endtrans %}</label>
                            <input class="form-control" data-validation-required-message="{% trans %}Please enter your name.{% endtrans %}" id="name" name="name" placeholder="{% trans %}Name{% endtrans %}" required type="text">
                            <p class="help-block text-danger"></p>
                        </div>
                    </div>
                    <div class="control-group">
                        <div class="form-group floating-label-form-group controls">
                            <label>{% trans %}Email Address{% endtrans %}</label>
                            <input "phone" class="form-control" data-validation-required-message="{% trans %}Please enter your email address.{% endtrans %}" id="email" name="email" placeholder="{% trans %}Email Address{% endtrans %}" required type="email">
                            <p class="help-block text-danger"></p>
                        </div>
                    </div>
                    <div class="control-group">
                        <div class="form-group col-xs-12 floating-label-form-group controls">
                            <label>{% trans %}Phone Number{% endtrans %}</label>
                            <input class="form-control" data-validation-required-message="{% trans %}Please enter your phone number.{% endtrans %}" id="phone" name="phone" placeholder="{% trans %}Phone Number{% endtrans %}" required type="tel">
                            <p class="help-block text-danger"></p>
                        </div>
                    </div>
                    <div class="control-group">
                        <div class="form-group floating-label-form-group controls">
                            <label>{% trans %}Message{% endtrans %}</label>
                            <textarea class="form-control" data-validation-required-message="{% trans %}Please enter a message.{% endtrans %}" id="message" name="message" placeholder="{% trans %}Message{% endtrans %}" required rows="5"></textarea>
                            <p class="help-block text-danger"></p>
                        </div>
                    </div>
                    <br>
                    <div id="success"></div>
                    <div class="form-group">
                        <button class="btn btn-primary" id="sendMessageButton" type="submit">{% trans %}Send{% endtrans %}</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <hr>
{% endblock %}
