{% extends 'base.html.twig' %}
{% block body%}
    <!-- Main Content -->
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
                {% for post in posts %}
                    <div class="post-preview">
                        <a href="{{url('post')~'/'~post.getSlug()}}">
                            <h2 class="post-title">
                                {{ post.getTitle() }}
                            </h2>
                            <h3 class="post-subtitle">
                                {{ post.getSubtitle() }}
                            </h3>
                        </a>
                        <p class="post-meta">Posted by
                            <a href="#">Kejbal</a>
                            on
                            {{ post.getDate() | date('H:i:s d M Y') }}</p>
                    </div>
                    <hr>
                {% endfor %}
                <div class="row">
                    <div class="col-md-6">
                        {% if showButtonNewer %}
                            <div class="clearfix" id="newer-posts">
                                <a class="btn btn-primary float-left" href="{{url('category')~'/'~currentCategory~'/'~(currentPage-1)}}">&larr;
                                    {% trans %}Newer Posts{% endtrans %}
                                </a>
                            </div>
                        {% endif %}
                    </div>
                    <div class="col-md-6">
                        {% if showButtonOlder %}
                            <div class="clearfix" id="older-posts">
                                <a class="btn btn-primary float-right" href="{{url('category')~'/'~currentCategory~'/'~(currentPage+1)}}">{% trans %}Older Posts{% endtrans %}
                                    &rarr;</a>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>{% endblock %}
