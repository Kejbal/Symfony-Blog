{% extends 'base.html.twig' %}
{% block body%}
    <!-- Main Content -->
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
                {% for post in posts %}
                    <div class="post-preview">
                        <a href="#">
                            <h2 class="post-title">
                                {{ post.getTitle() }}
                            </h2>
                            <h3 class="post-subtitle">
                                {{ post.getSubtitle() }}
                            </h3>
                        </a>
                        <p class="post-meta">Posted by
                            <a href="#">Kejbal</a>
                            on
                            {{ post.getDate() | date('H:i:s d M Y') }}</p>
                    </div>
                    <hr>
                    {% endfor %}
                    <!-- Pager -->
